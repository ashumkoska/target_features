<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
    
        <template id="report_saleorder_target_document" inherit_id="sale.report_saleorder_document">
            <xpath expr="//t/div/div[2]/div[1]" position="replace">
                <div class="col-xs-6"/>
            </xpath>
            <xpath expr="//div[@t-field='o.partner_id']" position="replace">
                <br/>
                <p>To: </p>
                <span t-field="o.partner_id.name"/><br/>
                <span t-field="o.partner_id.street"/><br/>
                <span t-field="o.partner_id.street2"/><br/>
                <span t-field="o.partner_id.city"/>
            </xpath>
            <xpath expr="//h2" position="replace">
                <h2>
                    <span t-if="o.state not in ['draft','sent']">Offer N° </span>
                    <span t-if="o.state in ['draft','sent']">Quotation N° </span>
                    <span t-field="o.name"/>
                </h2>
            </xpath>
            <xpath expr="//t/div/div[last()-1]" position="after">
                <div class="row">
                    <div class="col-xs-6 col-xs-offset-7">
                        <br/><br/><br/><br/><br/><br/><br/><br/>
                        <p>Respectfully, </p>
                        <span t-field="o.company_id.partner_id.name"/><br/>
                        <t t-if="o.company_id.partner_id.street">               
                            <span t-field="o.company_id.partner_id.street"/><br/>                                
                        </t>
                        <t t-if="o.company_id.partner_id.street2">              
                            <span t-field="o.company_id.partner_id.street2"/><br/>                                
                        </t>
                        <t t-if="o.company_id.partner_id.phone">
                            <span>Phone: </span>                                
                            <span t-field="o.company_id.partner_id.phone"/><br/>                                
                        </t>
                        <t t-if="o.company_id.partner_id.email">
                            <span>E-mail: </span>                                
                            <span t-field="o.company_id.partner_id.email"/><br/>
                        </t>
                        <t t-if="o.company_id.partner_id.website">
                            <span>Website: </span>                                
                            <span t-field="o.company_id.partner_id.website"/>
                        </t>
                    </div>                                       
                </div>
            </xpath>
        </template>

    </data>
</openerp>
