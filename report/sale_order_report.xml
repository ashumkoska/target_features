<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
    
        <template id="report_saleorder_target_document" inherit_id="sale.report_saleorder_document">
            <xpath expr="//t/div/div[2]/div[1]" position="replace">
                <div class="col-xs-6"/>
            </xpath>
            <xpath expr="//div[@t-field='o.partner_id']" position="replace">
                <p>To: </p>
                <span t-field="o.partner_id.name"/><br/>
                <span t-field="o.partner_id.street"/><br/>
                <span t-field="o.partner_id.street2"/><br/>
                <span t-field="o.partner_id.city"/>
            </xpath>
            <xpath expr="//h2" position="replace">
                <h2>
                    <span t-if="o.state not in ['draft','sent']">Offer N° </span>
                    <span t-if="o.state in ['draft','sent']">Quotation N° </span>
                    <span t-field="o.name"/>
                </h2>
            </xpath>
        </template>

    </data>
</openerp>