<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
    
        <!-- Views -->
        <record id="view_import_partners_form" model="ir.ui.view">
            <field name="name">import.partners.form</field>
            <field name="model">import.partners.wiz</field>
            <field name="arch" type="xml">
                <form string="Import Partners">
                    <span>Please select the file containing the partners you want to import: </span>
                    <group>
                        <field name="partners_file" nolabel="1"/>
                    </group>
                    <footer>
                        <button name="import_partners" string="Import Partners" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_import_partners" model="ir.actions.act_window">
            <field name="name">Import Partners</field>
            <field name="res_model">import.partners.wiz</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
           
        <menuitem id="menu_import_partners" name="Import Partners" parent="base.menu_sales"
                  action="action_import_partners" sequence="15"/>
            
    </data>            
</openerp>
